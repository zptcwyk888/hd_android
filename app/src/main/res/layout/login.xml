<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/login_out_topbar"
        style="@style/top_out_bar"
        >

        <RelativeLayout
            android:id="@+id/login_phonebar"
            style="@style/phone_bar"
            />

        <TextView
            android:id="@+id/loginTextView"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ee4136"
            android:gravity="center"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/test">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="18dp">

        <EditText
            android:id="@+id/user_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:drawableLeft="@drawable/phone_img"
            android:hint="请输入手机号"
            android:textSize="@dimen/text_TextSize"
            android:numeric="integer"
            android:maxLength="11"
            android:singleLine="true"/>
        <View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:textColor="@color/gray_text_color"
           android:background="#bebebe"/>

        <EditText
            android:id="@+id/user_pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:drawableLeft="@drawable/pwd_img"
            android:hint="请输入密码"
            android:password="true"
            android:textColor="@color/gray_text_color"
            android:textSize="@dimen/text_TextSize"
            android:maxLength="12"
            android:singleLine="true"/>
        <View
           android:layout_height="1px"
           android:layout_width="match_parent"
           android:background="#bebebe"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp">

            <TextView
                android:id="@+id/user_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/new_user_register"
                android:textColor="#5187c4"
                android:textSize="@dimen/text_TextSize" />

            <TextView
                android:id="@+id/user_forget_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/forget_password"
                android:textColor="#5187c4"
                android:textSize="@dimen/text_TextSize" />
        </LinearLayout>

        <Button
            android:id="@+id/user_login_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_pressed"
            android:gravity="center"
            android:padding="5dp"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/title_TextSize" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
