<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ededed">
    <LinearLayout
        style="@style/top_out_bar"
        android:id="@+id/me_out_topbar">
        <RelativeLayout
            style="@style/phone_bar"
            android:id="@+id/me_phonebar">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/me_topbar"
            style="@style/topbar" >
            <TextView
                android:id="@+id/me_topbar_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="页面4"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/CenterTextSize" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/title_TextSize"
                android:id="@+id/setting"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_alignBottom="@id/me_topbar_TextView"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/setting"
                android:layout_toLeftOf="@id/setting"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="18dp"
                android:scaleType="fitXY"/>
        </RelativeLayout>
    </LinearLayout>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrMode="pullDownFromTop"
        android:id="@+id/mpullToRefreshScrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下拉刷新ScrollView"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
</com.handmark.pulltorefresh.library.PullToRefreshScrollView>

</LinearLayout>
